<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:id="@+id/raqam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/okk"
            android:layout_alignTop="@+id/okk"
            android:layout_toEndOf="@+id/okk"
            android:layout_toRightOf="@+id/okk"
            android:textSize="10sp"
            android:hint="Buyurtma soni" />


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:id="@+id/opa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/okk"
            android:layout_alignTop="@+id/okk"
            android:layout_toEndOf="@+id/okk"
            android:layout_toRightOf="@+id/okk"
            android:textSize="12sp"
            android:visibility="invisible" />


        <CheckBox
            android:gravity="center"
            android:textSize="12sp"
            android:id="@+id/okk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Belgilash" />


        <Button
            android:visibility="invisible"
            android:id="@+id/nov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/raqam"
            android:layout_alignEnd="@+id/image_view_upload"
            android:layout_alignRight="@+id/image_view_upload"
            android:layout_alignTop="@+id/raqam"
            android:gravity="center"
            android:text="O'zgartirish"
            android:textSize="10sp" />


        <TextView

            android:gravity="center"
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nov"
            android:layout_centerHorizontal="true"
            android:text="name"
            android:textSize="17sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_view_name"
            android:id="@+id/image_view_upload" />

    </RelativeLayout>

</android.support.v7.widget.CardView>